<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ecommerceapp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:colorAccent">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color</item>

        <!-- System UI Configurations-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item> <!-- For making status bar content color dark -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>  <!-- For making Navigation bar content color dark -->
    </style>

    <style name="Theme.Ecommerceapp" parent="Base.Theme.Ecommerceapp" />


    <style name="Theme.MainActivity" parent="Base.Theme.Ecommerceapp">
        <item name="android:windowBackground">@drawable/lanch_window_background</item>

        <!-- System UI Configurations-->
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">false</item> <!-- For making status bar content color dark -->
        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>  <!-- For making Navigation bar content color dark -->
    </style>
    <style name="TitleTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/primaryDarkColor</item> <!-- Text color -->
        <item name="android:textSize">16sp</item> <!-- Text size -->
        <item name="android:textStyle">bold</item> <!-- Text style -->
    </style>>

</resources>